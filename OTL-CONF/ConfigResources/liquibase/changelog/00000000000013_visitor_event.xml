<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="sbondarev" id="13-1">
        <preConditions>
            <not>
                <tableExists tableName="visitor_authentication_event"/>
            </not>
        </preConditions>
        <createTable tableName="visitor_authentication_event">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP(6) WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)"/>
            <column name="last_modified_date" type="TIMESTAMP(6) WITHOUT TIME ZONE"/>
            <column name="visitor_id" type="BIGINT">
                <constraints foreignKeyName="visitor_authentication_event_visitor_fk" referencedTableName="visitor" referencedColumnNames="id"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints foreignKeyName="visitor_authentication_event_client_fk" referencedTableName="client" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="sbondarev" id="13-2">
        <preConditions>
            <not>
                <tableExists tableName="visitor_registration_event"/>
            </not>
        </preConditions>
        <createTable tableName="visitor_registration_event">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP(6) WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)"/>
            <column name="last_modified_date" type="TIMESTAMP(6) WITHOUT TIME ZONE"/>
            <column name="visitor_id" type="BIGINT">
                <constraints foreignKeyName="visitor_registration_event_visitor_fk" referencedTableName="visitor" referencedColumnNames="id"/>
            </column>
            <column name="registrant_id" type="BIGINT">
                <constraints foreignKeyName="visitor_registration_event_registrant_fk" referencedTableName="registrant" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
